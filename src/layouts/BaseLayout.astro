---
import '../styles/global.css';
import SEOMeta from '../components/SEOMeta.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
  canonical?: string;
  lang: 'it' | 'en' | 'es' | 'fr';
  type?: 'website' | 'article' | 'product';
  article?: {
    publishedTime?: string;
    modifiedTime?: string;
    author?: string;
    section?: string;
    tags?: string[];
  };
  product?: {
    price?: number;
    currency?: string;
    availability?: 'in_stock' | 'out_of_stock' | 'preorder';
  };
  organization?: boolean;
  breadcrumbs?: Array<{
    name: string;
    url: string;
  }>;
}

const {
  title,
  description,
  image,
  canonical,
  lang,
  type,
  article,
  product,
  organization = true,
  breadcrumbs
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- SEO Meta Tags -->
    <SEOMeta
      {title}
      {description}
      {image}
      {canonical}
      {lang}
      {type}
      {article}
      {product}
      {organization}
      {breadcrumbs}
    />

    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-gray-900">
    <slot />
  </body>
</html>