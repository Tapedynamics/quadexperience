---

<footer class="bg-gray-900 text-white">
  <!-- Main Footer -->
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <div class="flex items-center space-x-2 mb-4">
          <img src="/images/logo-white.png" alt={currentContent.company.name} class="h-8 w-auto" />
          <span class="text-xl font-bold">QuadExperience</span>
        </div>
        <p class="text-sm text-gray-300 mb-4">
          {currentContent.company.tagline}
        </p>
        <p class="text-sm text-gray-400">
          {currentContent.company.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4">{currentContent.quickLinks.title}</h3>
        <ul class="space-y-2">
          {currentContent.quickLinks.items.map(item => (
            <li>
              <a href={item.href} class="text-gray-300 hover:text-orange-500 transition-colors text-sm">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Tours -->
      <div>
        <h3 class="text-lg font-semibold mb-4">{currentContent.tours.title}</h3>
        <ul class="space-y-2">
          {currentContent.tours.items.map(item => (
            <li>
              <a href={item.href} class="text-gray-300 hover:text-orange-500 transition-colors text-sm">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold mb-4">{currentContent.contact.title}</h3>
        <div class="space-y-3">
          <div class="flex items-start space-x-2">
            <svg class="w-4 h-4 text-orange-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <p class="text-sm text-gray-300">{currentContent.contact.address}</p>
          </div>

          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-orange-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${currentContent.contact.phone}`} class="text-sm text-gray-300 hover:text-orange-500 transition-colors">
              {currentContent.contact.phone}
            </a>
          </div>

          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-orange-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${currentContent.contact.email}`} class="text-sm text-gray-300 hover:text-orange-500 transition-colors">
              {currentContent.contact.email}
            </a>
          </div>

          <div class="flex items-center space-x-2">
            <svg class="w-4 h-4 text-orange-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <p class="text-sm text-gray-300">{currentContent.contact.hours}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Social Media & Newsletter -->
    <div class="border-t border-gray-800 mt-8 pt-8">
