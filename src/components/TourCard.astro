---
import { Image } from 'astro:assets';

export interface Props {
  title: string;
  description: string;
  image: string;
  price: number;
  duration: string;
  difficulty: 'easy' | 'moderate' | 'hard';
  terrain: 'coastal' | 'volcanic' | 'mixed' | 'mountain';
  slug: string;
  lang: 'it' | 'en' | 'es' | 'fr';
  maxParticipants: number;
  featured?: boolean;
}

const {
  title,
  description,
  image,
  price,
  duration,
  difficulty,
  terrain,
  slug,
  lang,
  maxParticipants,
  featured = false
} = Astro.props;

const difficultyLabels = {
  it: { easy: 'Facile', moderate: 'Medio', hard: 'Difficile' },
  en: { easy: 'Easy', moderate: 'Moderate', hard: 'Hard' },
  es: { easy: 'Fácil', moderate: 'Moderado', hard: 'Difícil' },
  fr: { easy: 'Facile', moderate: 'Modéré', hard: 'Difficile' }
};

const terrainLabels = {
  it: { coastal: 'Costiero', volcanic: 'Vulcanico', mixed: 'Misto', mountain: 'Montano' },
  en: { coastal: 'Coastal', volcanic: 'Volcanic', mixed: 'Mixed', mountain: 'Mountain' },
  es: { coastal: 'Costero', volcanic: 'Volcánico', mixed: 'Mixto', mountain: 'Montaña' },
  fr: { coastal: 'Côtier', volcanic: 'Volcanique', mixed: 'Mixte', mountain: 'Montagne' }
};

const bookingLabels = {
  it: { book: 'Prenota Ora', from: 'da', person: '/persona', duration: 'Durata', participants: 'Max partecipanti' },
  en: { book: 'Book Now', from: 'from', person: '/person', duration: 'Duration', participants: 'Max participants' },
  es: { book: 'Reservar', from: 'desde', person: '/persona', duration: 'Duración', participants: 'Máx participantes' },
  fr: { book: 'Réserver', from: 'à partir de', person: '/personne', duration: 'Durée', participants: 'Max participants' }
};

const labels = bookingLabels[lang];
const terrainLabel = terrainLabels[lang][terrain];
const difficultyLabel = difficultyLabels[lang][difficulty];

const bookingLink = lang === 'it' ? `/tour/${slug}` : `/${lang}/tours/${slug}`;

const difficultyColor = {
  easy: 'bg-green-100 text-green-800',
  moderate: 'bg-yellow-100 text-yellow-800',
  hard: 'bg-red-100 text-red-800'
};
---

<div class={`bg-white rounded-xl shadow-lg overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1 ${featured ? 'ring-2 ring-orange-500 ring-opacity-50' : ''}`}>
  {featured && (
    <div class="bg-orange-500 text-white text-xs font-bold py-1 px-3 text-center">
      FEATURED
    </div>
  )}

  <!-- Image -->
  <div class="relative">
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover"
      loading="lazy"
    />
    <div class="absolute top-3 left-3">
      <span class={`inline-block px-2 py-1 rounded-full text-xs font-semibold ${difficultyColor[difficulty]}`}>
        {difficultyLabel}
      </span>
    </div>
    <div class="absolute top-3 right-3">
      <span class="inline-block px-2 py-1 rounded-full text-xs font-semibold bg-blue-100 text-blue-800">
        {terrainLabel}
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-2 line-clamp-2">
      {title}
    </h3>
    <p class="text-gray-600 text-sm mb-4 line-clamp-3">
      {description}
    </p>

    <!-- Tour Details -->
    <div class="flex items-center justify-between text-sm text-gray-500 mb-4">
      <div class="flex items-center space-x-4">
        <div class="flex items-center space-x-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>{duration}</span>
        </div>
        <div class="flex items-center space-x-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
          <span>{maxParticipants}</span>
        </div>
      </div>
    </div>

    <!-- Price and CTA -->
    <div class="flex items-center justify-between">
      <div class="text-2xl font-bold text-gray-900">
        <span class="text-sm text-gray-500 font-normal">{labels.from}</span>
        €{price}<span class="text-sm text-gray-500 font-normal">{labels.person}</span>
      </div>
      <a
        href={bookingLink}
        class="bg-orange-500 hover:bg-orange-600 text-white font-semibold py-2 px-4 rounded-lg transition-colors duration-200"
      >
        {labels.book}
      </a>
    </div>
  </div>
</div>