---

<section class="py-16 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
        {currentContent.title}
      </h2>
      <p class="text-xl text-gray-600">
        {currentContent.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {currentContent.tours.map((tour, index) => (
        <div class={`relative bg-white rounded-xl shadow-lg p-8 ${tour.popular ? 'ring-2 ring-orange-500 ring-opacity-50 transform scale-105' : ''}`}>
          {tour.popular && (
            <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
              <span class="bg-orange-500 text-white px-4 py-1 rounded-full text-sm font-semibold">
                {currentContent.popular}
              </span>
            </div>
          )}

          <!-- Header -->
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">{tour.name}</h3>
            <p class="text-gray-600 mb-4">{tour.subtitle}</p>
            <div class="text-4xl font-bold text-orange-500 mb-2">
              {currentContent.currency}{tour.price}
            </div>
            <div class="text-gray-500 text-sm">{tour.duration}</div>
          </div>

          <!-- Features -->
          <div class="space-y-3 mb-8">
            {tour.features.map((feature) => (
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">{feature}</span>
              </div>
            ))}
            {tour.excluded.map((excluded) => (
              <div class="flex items-center opacity-50">
                <svg class="w-5 h-5 text-gray-400 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                <span class="text-gray-500">{excluded}</span>
              </div>
            ))}
          </div>

          <!-- CTA -->
          <a
            href={`#contact-${index}`}
            class={`block w-full text-center py-3 px-6 rounded-lg font-semibold transition-colors duration-200 ${
              tour.popular
                ? 'bg-orange-500 hover:bg-orange-600 text-white'
                : 'bg-gray-100 hover:bg-gray-200 text-gray-900'
            }`}
          >
            {currentContent.bookNow}
          </a>
        </div>
      ))}
    </div>

    <!-- Additional Info -->
    <div class="text-center mt-12 text-gray-600">
      <p class="text-sm">
        {lang === 'it' && 'Tutti i prezzi sono per persona. Sconti disponibili per gruppi di 4+ persone.'}
        {lang === 'en' && 'All prices are per person. Group discounts available for 4+ people.'}
        {lang === 'es' && 'Todos los precios son por persona. Descuentos grupales disponibles para 4+ personas.'}
        {lang === 'fr' && 'Tous les prix sont par personne. Remises de groupe disponibles pour 4+ personnes.'}
      </p>
    </div>
  </div>
</section>